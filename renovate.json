{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true,
            "automergeType": "pr",
            "platformAutomerge": true
        }
    ],
    "automergeType": "pr",
    "platformAutomerge": true,
    "dependencyDashboard": true,
    "rebaseWhen": "behind-base-branch"
}